@model SalesWebMvc.Models.Seller
@*modelo para vincular cada atributo da classe Seller aos labels e inputs do formulário*@


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Seller</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @*action no Post*@

            <div class="form-group">
                @* asp-for vincula o nome do campo ao atributo da classe*@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>



        </form>


    </div>






</div>
