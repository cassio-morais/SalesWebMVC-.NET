@model SalesWebMvc.Models.SalesRecord

@{
    ViewData["Title"] = "Create a Sale";
}

<h2>@ViewData["Title"]</h2>



<div class="row">
    <div class="col-md-4">

        <form asp-action="CreateSale">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items=@ViewBag.Status class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="SellerId" class="control-label"></label>
                <select asp-for="SellerId" asp-items=@ViewBag.Sellers class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>


    </div>
</div>


@*Validação client-side*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}